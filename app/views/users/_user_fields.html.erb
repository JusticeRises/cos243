<% if @user.errors.any? %>
    <div class="alert alert-danger">
      <p class="text-danger"> You have <%= pluralize(@user.errors.count, "error") %>.</p>
    </div>    
    <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li class="text-danger"><%= message %></li>
        <%end%>
    </ul>
    <% end %>

<%= f.label :username , "Enter a Username" %>
<%= f.text_field :username, class: 'form-control' %>
<%= f.label :email, "Enter an Email Address" %>
<%= f.text_field :email, class: 'form-control' %>
<%= f.label :password , "Enter a Password" %>
<%= f.text_field :password, type: 'password', class: 'form-control' %>
<%= f.label :password_confirmation , "Enter Confirmation again" %>
<%= f.text_field :password_confirmation, type: 'password', class: 'form-control' %>