<h1>Log in ya lumberjack</h1>

<%= form_tag sessions_path do %>
  <%= label_tag :username %>
  <%= text_field_tag :username, params[:username] %>
  
  <%= label_tag :password %>
  <%= password_field_tag :password, params[:password] %>

  <%= submit_tag 'log in', class: 'btn btn-primary btn-lg' %>
<% end %>